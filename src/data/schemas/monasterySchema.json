{
    "title": "Monastery",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["_id", "routes"],
    "description": "Defines what opportunities are available at the monastery.",
    "additionalProperties": false,
    "definitions": {
        "routeId": {
            "type": "string",
            "enum": [
                "white-clouds",
                "silver-snow",
                "crimson-flower",
                "azure-moon",
                "verdant-wind"
            ]
        },
        "chapter": {
            "type": "object",
            "title": "Chapter",
            "required": [
                "events",
                "facilities",
                "lostItem",
                "dialog",
                "merchants"
            ],
            "additionalProperties": false,
            "properties": {
                "events": {
                    "type": "array",
                    "description": "The order of free days and instruction days",
                    "items": {
                        "type": "string",
                        "enum": ["free", "instruction"]
                    }
                },
                "facilities": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["id"],
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "$ref": "facilitySchema.json#/definitions/facilityId"
                            }
                        }
                    }
                },
                "lostItem": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "name",
                            "recipient",
                            "location"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            },
                            "recipient": {
                                "type": "string"
                            },
                            "location": {
                                "type": "string"
                            }
                        }
                    }
                },
                "dialog": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "recipient",
                            "conversation",
                            "answer"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "recipient": {
                                "type": "string"
                            },
                            "conversation": {
                                "type": "string"
                            },
                            "answer": {
                                "type": "string"
                            }
                        }
                    }
                },
                "merchants": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["id"],
                        "additionalProperties": false,
                        "properties": {
                            "id": {
                                "$ref": "merchantSchema.json#/definitions/merchantId"
                            }
                        }
                    }
                }
            }
        }

    },
    "properties": {
        "_id": {
            "description": "PouchDB required ID",
            "type": "string"
        },
        "routes": {
            "description": "Route specific information for the monastery",
            "type": "array",
            "items": {
                "title": "Route",
                "required": ["id", "routeName", "chapters"],
                "description": "A route in the game",
                "additionalProperties": false,
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "#/definitions/routeId"
                    },
                    "routeName": {
                        "type": "string"
                    },
                    "chapters": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/chapter"
                        }
                    }
                }
            }
        }
    }
}
