{
    "title": "Gift",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["_id", "name", "imageUrl"],
    "description": "Fire Emblem Gift Schema",
    "additionalProperties": false,
    "definitions": {
        "giftId": {
            "title": "GiftId",
            "description": "PouchDB required ID",
            "type": "string",
            "enum": [
                "ancient-coin",
                "arithmetic-textbook",
                "armored-bear-stuffy",
                "blue-cheese",
                "book-of-crest-designs",
                "ceremonial-sword",
                "exotic-spices",
                "hunting-dagger",
                "legends-of-chivalry",
                "lily",
                "smoked-meat",
                "tasty-baked-treat",
                "training-weight",
                "violet"
            ]
        }
    },
    "properties": {
        "_id": {
            "$ref": "#/definitions/giftId"
        },
        "name": {
            "description": "Gift Name",
            "type": "string"
        },
        "imageUrl": {
            "description": "URL for the object image, relative to src",
            "type": "string",
            "format": "uri-template"
        }
    }
}
